<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
            <Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

              <About>
                <Summary>Gladiator</Summary>
              </About>

              <ModSettings>
                  <MsPerTick>25</MsPerTick>
              </ModSettings>

              <ServerSection>
                <ServerInitialConditions>
                  <Time>
                    <StartTime>1000</StartTime>
                      <AllowPassageOfTime>false</AllowPassageOfTime>
                  </Time>
                  <Weather>clear</Weather>
                </ServerInitialConditions>
                <ServerHandlers>
                  <FlatWorldGenerator generatorString="3;7,57*1,5*3,2;3;,biome_1"/>
                  <DrawingDecorator>
                    <DrawCuboid x1="-10" y1="63" z1="10" x2="10" y2="70" z2="-30" type="iron_block"/>
                    <DrawCuboid x1="-9" y1="64" z1="9" x2="9" y2="69" z2="-29" type="air"/>
                    <DrawCuboid x1="-9" y1="70" z1="9" x2="9" y2="70" z2="-29" type="glowstone"/>
                  </DrawingDecorator>
                  <ServerQuitFromTimeUp timeLimitMs="300000"/>
                  <ServerQuitWhenAnyAgentFinishes/>
                </ServerHandlers>
              </ServerSection>

              <AgentSection mode="Survival">
                <Name>Gladiator</Name>
                <AgentStart>
                  <Placement x=".5" y="64" z="5.5" yaw="180"/>
                  <Inventory>
                    <InventoryItem slot="0" type="iron_sword"/>
                  </Inventory>
                </AgentStart>
                <AgentHandlers>
                  <DiscreteMovementCommands/>
				  <AbsoluteMovementCommands/>
				  <ContinuousMovementCommands turnSpeedDegs="240"/>
				  <ChatCommands/>
                  <MissionQuitCommands/>
				  <ObservationFromFullStats/>
                  <ObservationFromNearbyEntities>
                    <Range name="entities" xrange="21" yrange="2" zrange="80" />
                  </ObservationFromNearbyEntities>
                  <ObservationFromGrid>
                      <Grid name="floorAll">
                        <min x="-1" y="0" z="-1"/>
                        <max x="1" y="-0" z="1"/>
                      </Grid>
                  </ObservationFromGrid>
                </AgentHandlers>
              </AgentSection>
            </Mission>
